<Page x:Class="Praktika1.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Praktika1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">
    

    <Grid>
        
            <StackPanel> 
            
                <TextBlock Text="Login" Foreground="Coral"/>
                <TextBox x:Name="TBLogin"       Foreground="Black"/>
                <TextBlock Text="Password" Foreground="Coral"/>
            <TextBox x:Name="TBPassword"     Foreground="Black">
            </TextBox>
                <TextBlock></TextBlock>
                <Button x:Name="BLogin"
                Content="Login"
                Click="BLogin_Click"
                    Foreground="Coral"
                 Background="Cyan"/>
            </StackPanel>
        
    </Grid>
</Page>
